

#app
  padding-top 2.2rem
  background-color white
  width 100%
  .first_header //header
    position fixed
    top 0rem
    left 0rem
    z-index 51
    box-sizing border-box
    height 2.2rem
    width 100%
    background-color pink
    padding 0.3rem
    span
      width  20%
      font-size 0.5rem
    input
      position relative
      height 1rem
      padding 0 2rem
      border 1px solid #000

    button
      border 1px solid red
      height 1rem
    img
      position absolute
      left 3.8rem
      top 0.65rem
  .tab_mask //导航msk
    position absolute
    left 0rem
    top -5rem //2
    z-index 5
    width 100%
    height 7rem
    background white
    h3
      height 2.5rem
    .nav_mask_list
      width 100%
      display flex
      flex-wrap wrap
      .nav_mask_item
       display flex
       align-items center
       justify-content space-around
       width 20%
       height 1rem
       border 0.3rem solid #ccc
       background #eeeeee
       margin 0.5%
       font-size 0.5rem
       text-align center
       line-height 0.5rem
  .first_nav
    position relative
    //padding-top  2.2rem
    box-sizing border-box
    padding-top 0.65rem
    overflow hidden
    height 2.2rem

    span
      position absolute
      right 0rem
      top 0rem
      z-index 50
      text-align center
      font-size 2rem
      line-height 2rem
      width 4rem
      height 2.2rem
      background white
    .nav_list
      width 150%
      font-size 0.5rem
      padding 0.2rem
      .nav_item
        display inline-block
        padding 0 0.2rem
        text-align center
        font-size 0.5rem
        line-height 0.5rem
        width 3rem
       & .active
         color red
         border-bottom 1px solid red
  .first_tab //轮播
    width 100%
    height 8rem
    overflow hidden
    .swiper_img
      height 100%
      width 100%
  .tab_list
    width 400%
    display flex
    .tab_item
      width 25%
      height 8rem
      img
        width 100%
        height 100%
  .first_assure //保障
    dispaly flex
    height 1.2rem
    width 100%
    background pink
    span
      height 1rem
      width 33%
      font-size 0.6rem
      vertical-align middle
      line-height 0.6rem
      padding 0.3rem
      img
        display inline-block
        vertical-align middle
  .frist_shop  //商品
    width 100%
    .shop_list
      display flex
      flex-wrap wrap
      width 100%
      border-bottom 0.3rem solid #ccc
      .shop_item
        height 4rem
        width 16.6666%
        padding  1.6%
        display flex
        flex-direction column
        align-items center
        img
          height 3.4rem
          width 3.4rem
        span
          font-size 0.5rem
          text-align center
          line-height 0.6rem
          text-align center
  .frist_newperson  //新手礼包  公用
    box-sizing border-box
    padding 0.5rem
    height 10rem
    width 100%
    border-bottom 0.3rem solid #eee
    h3
      text-align center
      font-size 1rem
      font-weight 500
      line-height 1rem
     .left
       height 8rem
       background #F9E9CF
       float left
       box-sizing border-box
       width 50%
       border-right 0.1rem solid white
       h3
          font-size 1rem
          font-weight 500
          line-height 1rem
       img
         margin 1rem auto
         height 5rem
         width 5rem
      .right
        padding 0.2rem
        height 4rem
        background #FBE2D3
        float left
        box-sizing border-box
        width 50%
        &:nth-chlid(2n)
          border-bottom  0.1rem solid white
        h3
          float left
          font-size 1rem
          font-weight 500
          line-height 1rem
        img
          float right
          top 3rem
          height 3.5rem
          width 3.5rem
    .brand_header
      overflow hidden
      .left_text
        float left
       .right_text
         float right
  #footer
    position fixed
    bottom 0
    left 0
    z-index 51
    height 1.5rem
    width 100%
    padding 0.4rem
    background white
    .footer_tabber
      display flex
      justify-content space-around
      .footer_item
        display flex
        flex-direction column
        width 2rem
        height 1.5rem
        align-items center
        &.active
          background #ff4400
        span
          font-size 0.5rem

